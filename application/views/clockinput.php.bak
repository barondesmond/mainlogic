			{
				echo ' selected ' ;
			}
			echo '>' . $type . '</OPTION>';
		}
		echo '</select>';
		echo '<input type=hidden name=StartDay value="' . $_REQUEST['StartDay'] . '">';

		echo '<input type=hidden name="Screen" value="'  .$_REQUEST['Screen'] . '" >';
